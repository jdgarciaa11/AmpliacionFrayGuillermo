@model Ampliacion_FrayGuillermo.Models.ViewModels.clsIndexVM

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <form method="post">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Categoria
                    </th>
                    <th>
                        Seleccionar
                    </th>
                </tr>
            </thead>
            @foreach (var planta in Model.ListaPlanta)
            {
                <tr>
                    <td>@planta.nombre</td>
                    <td>@planta.idCategoria</td>
                    <td><input type="checkbox" name="idPlantas" value="@planta.id"></td>
                </tr>
            }
        </table> <br />
        <label for="nombre">Elige una categoria:</label>
        <select name="idCategoria">
            @foreach (var categoria in Model.ListadoCategoria)
            {
                <option value="@categoria.id">@categoria.nombre</option>
            }
        </select>
        <input type="submit" value="Cambiar Categoria">
    </form>
</body>
</html>
